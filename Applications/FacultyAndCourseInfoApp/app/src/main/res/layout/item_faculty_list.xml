<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/facultyImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mitrof" />

    <TextView
        android:id="@+id/fullNameAndDegreeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/facultyImageView"
        android:text="fullname degree" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fullNameAndDegreeTextView"
        android:layout_below="@+id/fullNameAndDegreeTextView"
        android:layout_marginTop="17dp"
        android:text="title" />
</RelativeLayout>